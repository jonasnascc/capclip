<h1>Hello world!</h1>
<form id="upload_form">
    <div id="form_control">
        <label for="code">Seu código: </label>
        <input id="code" name="code" type="text" required/>
    </div>
    <div id="form_control">
        <label for="video_input">Seu vídeo: </label>
        <input id="video_input" name="video_file" type="file" accept="video/*" required/>
        <div class="preview_container">
            <video id="video_preview" style="max-width: 200px;" controls/>
        </div>
    </div>
    <div id="form_control">
        <label for="description">Descrição</label>
        <textarea id="description" name="description"></textarea>
    </div>
    <div id="submit_div">
        <div id="send_status"></div>
        <button type="submit">Enviar</button>
    </div>
</form>