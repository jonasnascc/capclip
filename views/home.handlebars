<h1>Hello world!</h1>
<form id="upload_form">
    <div id="form_control">
        <label id="code">Seu código: </label>
        <input id="code" name="code" type="text" required/>
    </div>
    <div id="form_control">
        <label id="video_file">Seu vídeo: </label>
        <input id="video_file" name="video_file" type="file" accept="video/*" required/>
    </div>
    <div id="form_control">
        <label id="description">Descrição</label>
        <textarea id="description" name="description"></textarea>
    </div>
    <div id="submit_div">
        <div id="send_status"></div>
        <button type="submit">Enviar</button>
    </div>
</form>