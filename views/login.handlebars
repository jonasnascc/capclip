<form id="loginForm">
    <img id="logo" src="/img/regular-logo.png">

    <h1>Faça seu login ou cadastre-se!</h1>
    <div id="auth_form_control">
        <label for="login">Login: </label>
        <input
            type="text"
            name="login"
            id="login"
            required
        />
    </div>
    <div id="auth_form_control">
        <label for="password">Senha: </label>
        <input
            type="password"
            name="password"
            id="password"
            required
        />
    </div>
    <button type="submit">LOGIN</button>
    <p id="signupCta">Não possui uma conta? <a href="/signup">Cadastre-se</a></p>
</form>